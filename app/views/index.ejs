<% include ./templates/head.ejs %>
<div class="container">
  <div class="d-flex flex-column content-custom">

  <section class="d-none d-md-block">
    <h1 class="text-center">Messages <i class="fas fa-comments"></i></h1>
  </section>

  <section class="two d-flex overflow-auto">
    <div class="w-100  mt-auto" id="messages"></div>
  </section>

  <section >
    <div class="jumbotron m-0 py-0 py-md-4 px-0 px-md-3 pt-3 bg-white">
        <input id="name" aria-label="name" class="form-control" placeholder="Votre nom">

        <div class="position-relative">
          <textarea aria-label="message" id="message" class="form-control" placeholder="Votre message ici"></textarea>

          <div id="emoji-group" class="btn-group dropup position-absolute">
            <button type="button" class="btn bg-transparent border-0 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">😀</button>
            <div id="emoji-menu" class="dropdown-menu dropdown-menu-right">
              <div class="d-flex">
                <button class="bg-transparent border-0" href="#">😀</button>
                <button class="bg-transparent border-0" href="#">😄</button>
                <button class="bg-transparent border-0" href="#">😂</button>
                <button class="bg-transparent border-0" href="#">😅</button>
                <button class="bg-transparent border-0" href="#">😇</button>
              </div>
              <div class="d-flex">
                <button class="bg-transparent border-0" href="#">😉</button>
                <button class="bg-transparent border-0" href="#">😋</button>
                <button class="bg-transparent border-0" href="#">😍</button>
                <button class="bg-transparent border-0" href="#">😎</button>
                <button class="bg-transparent border-0" href="#">😜</button>
              </div>
              <div class="d-flex">
                <button class="bg-transparent border-0" href="#">😞</button>
                <button class="bg-transparent border-0" href="#">😟</button>
                <button class="bg-transparent border-0" href="#">😠</button>
                <button class="bg-transparent border-0" href="#">😡</button>
                <button class="bg-transparent border-0" href="#">😢</button>
              </div>
            </div>
          </div>

          <button data-action-btn onkeydown="" id="send" class="btn  position-absolute"><span><i class="fas fa-paper-plane col-12"></i></span> <span class="send-text">Envoyer</span></button>
        </div>

    </div>
  </section>

</div>
  
</div>
<% include ./templates/footer.ejs %>