<% include ./templates/head.ejs %>
<div class="container">
  <div class="d-flex flex-column content-custom">

  <section class="d-none">
    <h1 class="text-center">Messages <i class="fas fa-comments"></i></h1>
  </section>

  <section class="two d-flex overflow-auto">
    <div class="w-100  mt-auto" id="messages"></div>
  </section>

  <section >
    
    <div class="jumbotron m-0 py-0 py-md-4 px-0 px-md-3 pt-3 bg-white">
      <form id="sendMessage" action="#">
      <div class="row m-0">
        <div class="col-6 pl-0"><input id="name" aria-label="name" class="form-control" minlength="3" maxlength="10" required placeholder="Votre nom"></div>
        <div class="col-6 d-flex align-items-center justify-content-end"><div id="usersConnected" class="text-secondary"></div></div>
      </div>
        

        <div class="position-relative">
          <textarea aria-label="message" type="text" id="message" class="form-control" required placeholder="Votre message ici"></textarea>

          <div id="emoji-group" class="btn-group dropup position-absolute">
            <button type="button" class="btn bg-transparent border-0 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">😀</button>
            <div id="emoji-menu" class="dropdown-menu dropdown-menu-right">
              <div class="d-flex">
                <button class="bg-transparent border-0">😀</button>
                <button class="bg-transparent border-0">😄</button>
                <button class="bg-transparent border-0">😂</button>
                <button class="bg-transparent border-0">😅</button>
                <button class="bg-transparent border-0">😇</button>
              </div>
              <div class="d-flex">
                <button class="bg-transparent border-0">😉</button>
                <button class="bg-transparent border-0">😋</button>
                <button class="bg-transparent border-0">😍</button>
                <button class="bg-transparent border-0">😎</button>
                <button class="bg-transparent border-0">😜</button>
              </div>
              <div class="d-flex">
                <button class="bg-transparent border-0">😞</button>
                <button class="bg-transparent border-0">😟</button>
                <button class="bg-transparent border-0">😠</button>
                <button class="bg-transparent border-0">😡</button>
                <button class="bg-transparent border-0">😢</button>
              </div>
            </div>
          </div>

          <button data-action-btn  id="send" type="submit" class="btn position-absolute"><span><i class="fas fa-paper-plane col-12"></i></span> <span class="send-text">Envoyer</span></button>
        </div>
      </form>
    </div>
  </section>

    <!-- Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Supprimer ce message ?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          
          <div class="msgToRemove mt-2">
            <p class="m-0 mb-sm-4 mb-md-3" data-msg-content></p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Oui</button>
        </div>
      </div>
    </div>
  </div>

</div>
  
</div>
<% include ./templates/footer.ejs %>